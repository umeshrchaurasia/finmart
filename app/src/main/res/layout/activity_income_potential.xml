<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"

    tools:context="com.datacomp.magicfinmart.IncomeCalculator.IncomePotentialActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/TextStyle.Toolbar"
            app:titleTextColor="@color/white"/>


    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
      >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey_form_header"
                android:gravity="center"
                android:padding="10dp"
                android:text="FROM EXISTING LIC CUSTOMERS"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivQr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/qr"
                android:visibility="visible" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_edittext_border"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="CUSTOMER PROFILE"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/blue"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border_graybg"
                    android:padding="10dp"
                    android:text="Annual Family Premium"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border_graybg"
                    android:padding="10dp"
                    android:gravity="center"
                    android:text="No.of Families"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border_graybg"
                    android:padding="10dp"
                    android:text="Less than 50,000"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/etLess50k"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border"
                    android:gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border_graybg"
                    android:padding="10dp"
                    android:text="50,000 to 1,00,000"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/etUpto1lac"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border"
                    android:gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border_graybg"
                    android:padding="10dp"
                    android:text="1,00,000 to 3,00,000"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/etUpto3Lac"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border"
                    android:gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:inputType="number"
                    android:maxLength="4"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border_graybg"
                    android:padding="10dp"
                    android:text="3,00,000 to 10,00,000"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/etUpto10lac"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border"
                    android:gravity="center"
                    android:inputType="number"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:maxLength="4"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border_graybg"
                    android:padding="10dp"
                    android:text="Above 10,00,000"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/etAbove10lac"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/blue_border"
                    android:gravity="center"
                    android:inputType="number"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:maxLength="4"
                    android:padding="10dp"
                    android:textColor="@color/blue"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_edittext_border"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="5dp"
                android:text="SCENARIO"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/blue"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPermistic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/grey_border"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="PESSIMISTIC"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tvModerate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/grey_border"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="MODERATE"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tvOptimistic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/grey_border"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="OPTIMISTIC"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/btnCalculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/blue_button"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="CALCULATE"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>



