<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGetQuote"
        android:layout_alignParentTop="true"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cvNewRenew"
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_margin="10dp">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:id="@+id/tvNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@+id/switchNewRenew"
                    android:layout_toStartOf="@+id/switchNewRenew"
                    android:gravity="right|center_vertical"
                    android:text="NEW VEHICLE"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextStyle.TextMedium" />

                <Switch
                    android:id="@+id/switchNewRenew"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tvNew"
                    android:layout_alignBottom="@+id/tvNew"
                    android:layout_centerHorizontal="true"
                    android:checked="true"
                    android:colorControlActivated="#ff0066"
                    android:colorForeground="#ff0066"
                    android:switchMinWidth="50dp"
                    android:thumbTint="?attr/colorPrimary"
                    android:trackTint="?attr/colorPrimaryDark" />

                <TextView
                    android:layout_marginLeft="12dp"
                    android:gravity="left|center_vertical"
                    android:layout_toRightOf="@id/switchNewRenew"
                    android:id="@+id/tvRenew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/switchNewRenew"
                    android:layout_alignBottom="@+id/switchNewRenew"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="RENEWAL"
                    android:textAppearance="@style/TextStyle.TextMedium"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvIndividual"
            style="@style/CardStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:id="@+id/tvCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@+id/swIndividual"
                    android:layout_toStartOf="@+id/swIndividual"
                    android:gravity="right|center_vertical"
                    android:text="COMPANY"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextStyle.TextMedium" />

                <Switch
                    android:id="@+id/swIndividual"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tvCompany"
                    android:layout_alignBottom="@+id/tvCompany"
                    android:layout_centerHorizontal="true"
                    android:checked="true"
                    android:colorControlActivated="#ff0066"
                    android:colorForeground="#ff0066"
                    android:switchMinWidth="50dp"
                    android:thumbTint="?attr/colorPrimary"
                    android:trackTint="?attr/colorPrimaryDark" />

                <TextView
                    android:layout_marginLeft="12dp"
                    android:gravity="left|center_vertical"
                    android:layout_toRightOf="@id/swIndividual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/swIndividual"
                    android:layout_alignBottom="@+id/swIndividual"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="INDIVIDUAL"
                    android:textAppearance="@style/TextStyle.TextMedium"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvRegNo"
            style="@style/CardStyle.Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:padding="5dp">

                <TextView
                    android:id="@+id/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="ENTER VEHICLE REGISTRATION NO."
                    android:textAppearance="@style/TextStyle.TextLarge"
                    android:textColor="?attr/colorPrimaryDark" />

                <LinearLayout
                    android:paddingTop="10dp"
                    android:id="@+id/llRegNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/head"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/etreg1"
                        style="@style/Style.edittext"
                        android:layout_width="40dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="center"
                        android:inputType="text"
                        android:maxLength="2" />

                    <EditText
                        android:id="@+id/etreg2"
                        style="@style/Style.edittext"
                        android:layout_width="40dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="center"
                        android:inputType="text"
                        android:maxLength="2" />

                    <EditText
                        android:id="@+id/etreg3"
                        style="@style/Style.edittext"
                        android:layout_width="40dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:gravity="center"
                        android:maxLength="3" />

                    <EditText
                        android:id="@+id/etreg4"
                        style="@style/Style.edittext"
                        android:layout_width="80dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="4" />

                    <Button
                        android:id="@+id/btnGo"
                        style="@style/ButtonStyle.Colored"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:minHeight="45dp"
                        android:text="GO!" />

                </LinearLayout>

                <TextView
                    android:textColor="#c4c4c4"
                    android:layout_marginTop="5dp"
                    android:id="@+id/tvHintRegNo"
                    style="@style/TextStyle.TextLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llRegNo"
                    android:layout_centerHorizontal="true"
                    android:text="e.g.MH 04 EQ 1234 " />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:textSize="20sp"
            android:id="@+id/tvOr"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHintRegNo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="OR"
            android:textColor="?attr/colorPrimaryDark"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llDontKnow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOr"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <TextView
                style="@style/TextStyle.TextLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't know registration number?" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvDontKnow"
                style="@style/TextStyle.TextLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="Click Here"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/cvInput"-->
        <!--style="@style/CardStyle.Home"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:visibility="visible">-->

        <include
            android:id="@+id/cvInput"
            layout="@layout/bike_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--</android.support.v7.widget.CardView>-->


    </LinearLayout>

    <Button
        android:id="@+id/btnGetQuote"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="GET QUOTES"
        android:visibility="gone" />

</RelativeLayout>

