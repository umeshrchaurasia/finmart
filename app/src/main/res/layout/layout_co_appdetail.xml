<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp">


    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:background="@color/lightGrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <android.support.design.widget.TextInputLayout
                    style="@style/TextAppearence.App.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:hint="Co-Applicant Name">



                    <EditText
                        android:id="@+id/coApp_etNameOfApplicant"

                        android:maxLines="1"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                        android:drawableRight="@drawable/vector_person"
                        android:inputType="textCapWords"
                        style="@style/Style.edittext" />
                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView

                        android:gravity="center"
                        style="@style/TextViewStyle.Medium"
                        android:text="Gender" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/txtco_app_rbimgMale"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="50"
                            android:background="@drawable/customeborder_blue"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="MALE"
                            android:textColor="?attr/colorPrimary" />

                        <TextView

                            android:id="@+id/txtco_app_rbimgFemale"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="50"
                            android:background="@drawable/customeborder"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="FEMALE"
                            android:textColor="@color/description_text" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <android.support.design.widget.TextInputLayout
                    style="@style/TextAppearence.App.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:hint="Date of Birth">

                    <EditText
                        android:id="@+id/coApp_et_DOB"
                        style="@style/Style.edittext"
                        android:drawableRight="@drawable/vector_date"
                        android:focusable="false" />
                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView

                        android:gravity="center"
                        style="@style/TextViewStyle.Medium"
                        android:text="Occupation" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/txtCoSalaried"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_weight="50"
                            android:background="@drawable/customeborder_blue"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="SALARIED"
                            android:textColor="?attr/colorPrimary" />

                        <TextView

                            android:id="@+id/txtCoSelfEMp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="50"
                            android:background="@drawable/customeborder"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="SELF-EMP"
                            android:textColor="@color/description_text" />


                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <LinearLayout
                    android:id="@+id/coApp_llSelfEmployeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout"
                            android:layout_width="0dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:hint="Turnover/ Top-Line">


                            <EditText
                                android:id="@+id/coApp_etTurnOver"
                                style="@style/Style.edittext"
                                android:digits="0123456789"
                                android:ems="10"
                                android:inputType="phone"
                                android:maxLength="10" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout"
                            android:layout_width="0dp"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:hint="Profit After Tax">

                            <EditText
                                android:id="@+id/coApp_etProfitAtTax"
                                style="@style/Style.edittext"
                                android:digits="0123456789"
                                android:ems="10"
                                android:inputType="phone"
                                android:maxLength="10" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout"
                            android:layout_width="0dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="1"
                            android:hint="Depreciation">


                            <EditText
                                android:id="@+id/coApp_etDepreciation"
                                style="@style/Style.edittext"
                                android:digits="0123456789"
                                android:ems="10"
                                android:inputType="phone"
                                android:maxLength="10" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout"
                            android:layout_width="0dp"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="1"
                            android:hint="Partner Remuneration">

                            <EditText
                                android:id="@+id/coApp_etDirecPartRemuntion"
                                style="@style/Style.edittext"
                                android:digits="0123456789"
                                android:ems="10"
                                android:inputType="phone"
                                android:maxLength="10" />
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:gravity="bottom"
                    android:id="@+id/coApp_llSalaried"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/coApp_llView1MothlyIncome"
                        >
                        <android.support.design.widget.TextInputLayout
                            style="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:hint="Monthly Income">

                        <EditText
                            android:id="@+id/coApp_etMonthlyInc"
                            style="@style/Style.edittext"
                            android:digits="0123456789"
                            android:ems="10"
                            android:inputType="phone"
                            android:maxLength="10" />
                    </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextViewStyle.Medium"
                            android:textColor="?attr/colorPrimary"
                            android:text="Relation With Applicant" />

                        <Spinner

                        android:id="@+id/coApp_sbRelation"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextAppearence.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="50"
                        android:hint="Existing EMI (If Any)">

                        <EditText
                            android:id="@+id/coApp_etEMI"
                            style="@style/Style.edittext"
                            android:digits="0123456789"
                            android:ems="10"
                            android:text="0"
                            android:maxLength="9"
                            android:inputType="phone" />
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>



            </LinearLayout>




            <!--/////////////////////////-->






        </LinearLayout>


    <!--</ScrollView>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightGrey" />

</LinearLayout>