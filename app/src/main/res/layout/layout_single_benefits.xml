<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtBenefitsDesc"
        style="@style/TextStyle.Title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dashboard_bg"
        android:textColor="@color/dashboard_title"
        android:gravity="left"
        android:padding="6dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="4dp"

            android:gravity="left"
            android:padding="6dp"
            android:src="@drawable/red_dot" />
        <!--android:background="@color/red_descent"-->
        <TextView
            android:id="@+id/txtBenefitsName"
            style="@style/TextStyle.TextMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/black"
            android:padding="5dp" />
    </LinearLayout>
</LinearLayout>


