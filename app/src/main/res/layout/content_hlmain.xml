<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.datacomp.magicfinmart.loan_fm.homeloan.addquote.HLMainActivity"
    tools:showIn="@layout/activity_hlmain">


    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bottomNavigation"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true" />

    <View
        android:id="@+id/viewHeader"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="100">
    </View>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewHeader"
        android:layout_gravity="bottom"
        app:itemBackground="?attr/colorPrimaryDark"
        app:itemIconTint="@drawable/nav_item_color_state"
        app:itemTextColor="@drawable/nav_item_color_state"
        app:menu="@menu/navigationloan" />

    <LinearLayout
        android:id="@+id/lyheader"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/bottomNavigation"
        android:background="?attr/colorPrimaryDark"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="visible"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="33"
            android:gravity="center_horizontal"
            android:weightSum="100">

            <ImageView

                android:id="@+id/ivHdrInput"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="70"
                android:visibility="visible"
                android:src="@drawable/rect_shape" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="33"
            android:gravity="center_horizontal"
            android:weightSum="100">

            <ImageView

                android:id="@+id/ivHdrQuote"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="70"
                android:visibility="visible"
                android:src="@drawable/rect_shape" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_weight="34"
            android:gravity="center_horizontal"
            android:visibility="invisible"
            android:weightSum="100">

            <ImageView

                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="65"
                android:src="@drawable/rect_shape" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
