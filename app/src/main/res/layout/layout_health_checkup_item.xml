<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/borderthealthcheckup"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="25"
        android:background="@drawable/borderthealthcheckup"
        android:padding="4dp"
        android:src="@drawable/health_assure_logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="45"
        android:background="@drawable/borderthealthcheckup"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="XXX"
            android:textAppearance="@style/TextViewStyle.Medium"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txtMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="XXX"
            android:textAppearance="@style/TextViewStyle.Medium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtPackageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="XXX"
            android:textAppearance="@style/TextViewStyle.Medium"
            android:textColor="@color/header_light_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:background="@drawable/borderthealthcheckup"
        android:orientation="vertical"
        android:padding="8dp">


        <TextView
            android:id="@+id/txtMRP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:gravity="left"
            android:text="XXX"
            android:textAppearance="@style/TextViewStyle.Medium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:gravity="bottom"
            android:text="XXX"
            android:textAppearance="@style/TextViewStyle.Small"
            android:textColor="@color/red_descent" />
    </LinearLayout>
</LinearLayout>
