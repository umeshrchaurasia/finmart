<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/white"
    android:orientation="vertical">

    <TextView

        style="@style/TextStyle.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_color"
        android:gravity="center"
        android:minHeight="36dp"
        android:padding="12dp"
        android:text="Magic Platinum subscription"
        android:textAllCaps="true"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />

    <TextView

        android:id="@+id/txtDesc"
        style="@style/TextStyle.TextMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/mps_popup_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtKnowMore"
        style="@style/TextViewStyle.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="#deedf4"
        android:gravity="center"
        android:padding="12dp"
        android:text="Know more about MPS"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtGetMPS"
            style="@style/TextStyle.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/bordertbl_blue"
            android:gravity="center"
            android:padding="12dp"
            android:text="GET MPS NOW"
            android:textColor="?attr/colorPrimary" />

        <TextView
            android:id="@+id/txtLater"
            style="@style/TextStyle.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@drawable/bordertbl_blue"
            android:gravity="center"
            android:padding="12dp"
            android:text="MAYBE LATER"
            android:textColor="?attr/colorPrimary" />
    </LinearLayout>
</LinearLayout>