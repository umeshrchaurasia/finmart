<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardViewStyle"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="30"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                style="@style/TextStyle.TextMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer name"
                android:textAllCaps="true"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtCustName"
                style="@style/TextStyle.TextMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textAllCaps="true"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imgInsurerLogo"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:padding="2dp"
                android:gravity="center"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="30"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                style="@style/TextStyle.TextMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textAllCaps="true"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtCategory"
                style="@style/TextStyle.TextMedium"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:textAllCaps="true"
                android:textColor="@color/black" />

            <TextView
                style="@style/TextStyle.TextMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Type"
                android:textAllCaps="true"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtType"
                style="@style/TextStyle.TextMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="30"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                style="@style/TextStyle.TextMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="App status"
                android:textAllCaps="true"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/imgStatus"
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <TextView
                style="@style/TextStyle.TextMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pending days"
                android:textAllCaps="true"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/txtPendingDays"
                style="@style/TextStyle.TextMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="10"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/txtOverflowMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/threedots"
                android:textAppearance="@style/TextStyle.Title"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

