<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.datacomp.magicfinmart.helpfeedback.raiseticket.RaiseTicketActivity"
    tools:showIn="@layout/activity_raise_ticket">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".motor.privatecar.fragment.MotorQuoteFragment">

        <LinearLayout
            android:id="@+id/llSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c6c6c6"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAdd"
                    style="@style/TextStyle.TextMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:drawableLeft="@drawable/file_add"
                    android:drawablePadding="0dp"
                    android:gravity="center_vertical|left"
                    android:padding="2dp"
                    android:textColor="#474747"
                    android:textStyle="bold"
                    android:text="ADD TICKET" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="65"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etSearch"
                    style="@style/Style.edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="50"
                    android:backgroundTint="#c6c6c6"
                    android:hint="SEARCH" />

                <ImageView
                    android:id="@+id/ivSearch"
                    style="@style/TextViewStyle.Small"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:padding="5dp"
                    android:src="@drawable/file_search" />

                <TextView
                    android:id="@+id/tvSearch"
                    style="@style/TextViewStyle.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#474747"
                    android:text="SEARCH" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvTicketList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llSearch"
            android:scrollbarStyle="insideOverlay" />

    </RelativeLayout>

</LinearLayout>
